<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_materi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="@string/command_touch_button_label"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageview_header"
        android:layout_width="180dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:elevation="22dp"
        android:scaleType="fitXY"
        android:src="@drawable/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_materi_name" />

    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/cardview_icon"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_header" />

    <ImageView
        android:id="@+id/imageview_question_sound"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:elevation="21dp"
        android:src="@drawable/ic_baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_icon"
        app:layout_constraintEnd_toEndOf="@+id/cardview_icon"
        app:layout_constraintStart_toStartOf="@+id/cardview_icon"
        app:layout_constraintTop_toTopOf="@+id/cardview_icon" />

    <LinearLayout
        android:id="@+id/answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview_icon">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_answer_choice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <com.google.android.material.card.MaterialCardView
                android:theme="@style/Theme.MaterialComponents"
                app:strokeColor="@color/green"
                app:cardBackgroundColor="@color/colorAccent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/cardView_answer_choice1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageview_answer_choice1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_answer_choice1"
                app:layout_constraintEnd_toEndOf="@+id/cardView_answer_choice1"
                app:layout_constraintStart_toStartOf="@+id/cardView_answer_choice1"
                app:layout_constraintTop_toTopOf="@+id/cardView_answer_choice1" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_answer_choice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <com.google.android.material.card.MaterialCardView
                android:theme="@style/Theme.MaterialComponents"
                app:strokeColor="@color/green"
                app:cardBackgroundColor="@color/colorAccent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/cardView_answer_choice2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true" />

            <ImageView
                android:id="@+id/imageview_answer_choice2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_answer_choice2"
                app:layout_constraintEnd_toEndOf="@+id/cardView_answer_choice2"
                app:layout_constraintStart_toStartOf="@+id/cardView_answer_choice2"
                app:layout_constraintTop_toTopOf="@+id/cardView_answer_choice2" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_answer_choice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <com.google.android.material.card.MaterialCardView
                android:theme="@style/Theme.MaterialComponents"
                app:strokeColor="@color/green"
                app:cardBackgroundColor="@color/colorAccent"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/cardView_answer_choice3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageview_answer_choice3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:elevation="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/cardView_answer_choice3"
                app:layout_constraintEnd_toEndOf="@+id/cardView_answer_choice3"
                app:layout_constraintStart_toStartOf="@+id/cardView_answer_choice3"
                app:layout_constraintTop_toTopOf="@+id/cardView_answer_choice3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/disable_button"
        android:fontFamily="@font/nunito_extrabold"
        android:text="@string/submit_label"
        android:textAllCaps="false"
        android:textColor="@color/blur"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answer_container" />

</androidx.constraintlayout.widget.ConstraintLayout>