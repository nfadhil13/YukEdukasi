<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/materi_background">

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="140dp"
        android:layout_height="10dp"
        android:scaleType="fitXY"
        android:elevation="22dp"
        android:src="@drawable/header"
        app:layout_constraintBottom_toTopOf="@+id/cardview_icon"
        app:layout_constraintEnd_toEndOf="@+id/cardview_icon"
        app:layout_constraintStart_toStartOf="@+id/cardview_icon" />

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="20dp"
        android:id="@+id/cardview_icon"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_selected_materi"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="21dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_icon"
        app:layout_constraintEnd_toEndOf="@+id/cardview_icon"
        app:layout_constraintStart_toStartOf="@+id/cardview_icon"
        app:layout_constraintTop_toTopOf="@+id/cardview_icon" />

    <ImageView
        android:id="@+id/imageview_playsound"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:elevation="20dp"
        android:src="@drawable/ic_baseline_volume_up_24"
        app:layout_constraintBottom_toBottomOf="@+id/cardview_icon"
        app:layout_constraintStart_toStartOf="@+id/cardview_icon" />


    <TextView
        android:id="@+id/tv_materi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_extrabold"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintStart_toEndOf="@id/cardview_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:elevation="30dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/materi_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>